{
  "version": 2,
  "builds": [
    {
      "src": "api/shorten.go",
      "use": "@vercel/go@1.0.0"
    },
    {
      "src": "api/redirect.go",
      "use": "@vercel/go@1.0.0"
    },
    {
      "src": "api/stats.go",
      "use": "@vercel/go@1.0.0"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/shorten",
      "dest": "/api/shorten.go"
    },
    {
      "src": "/api/stats/(.*)",
      "dest": "/api/stats.go"
    },
    {
      "src": "/shorturl/(.*)",
      "dest": "/api/redirect.go"
    },
    {
      "src": "/([a-zA-Z0-9-]+)",
      "dest": "/api/redirect.go"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "PORT": "8080"
  }
}
